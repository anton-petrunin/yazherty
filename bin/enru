#!/bin/bash
xmodmap -e "keysym grave = grave asciitilde Cyrillic_io Cyrillic_IO" \
 -e "keysym 4 = 4 dollar 4 section" \
 -e "keysym equal = equal plus Cyrillic_yu Cyrillic_YU" \
 -e "keysym minus = minus underscore minus Cyrillic_E" \
 -e "keysym q =q Q Cyrillic_ya Cyrillic_YA" \
 -e "keysym w =w W Cyrillic_zhe Cyrillic_ZHE" \
 -e "keysym e =e E Cyrillic_ie Cyrillic_IE" \
 -e "keysym r =r R Cyrillic_er Cyrillic_ER" \
 -e "keysym t =t T Cyrillic_te Cyrillic_TE" \
 -e "keysym y =y Y Cyrillic_yeru Cyrillic_YERU" \
 -e "keysym u =u U Cyrillic_u Cyrillic_U" \
 -e "keysym i =i I Cyrillic_i Cyrillic_I" \
 -e "keysym o =o O Cyrillic_o Cyrillic_O" \
 -e "keysym p =p P Cyrillic_pe Cyrillic_PE" \
 -e "keycode 34 = bracketleft braceleft Cyrillic_sha Cyrillic_SHA" \
 -e "keycode 35 = bracketright braceright Cyrillic_shcha Cyrillic_SHCHA" \
 -e "keycode 51 = backslash bar Cyrillic_tse Cyrillic_TSE" \
 -e "keysym a =a A Cyrillic_a Cyrillic_A" \
 -e "keysym s =s S Cyrillic_es Cyrillic_ES" \
 -e "keysym d =d D Cyrillic_de Cyrillic_DE" \
 -e "keysym f =f F Cyrillic_ef Cyrillic_EF" \
 -e "keysym g =g G Cyrillic_ghe Cyrillic_GHE" \
 -e "keysym h =h H Cyrillic_ha Cyrillic_HA" \
 -e "keysym j =j J Cyrillic_shorti Cyrillic_SHORTI" \
 -e "keysym k =k K Cyrillic_ka Cyrillic_KA" \
 -e "keysym l =l L Cyrillic_el Cyrillic_EL" \
 -e "keysym apostrophe =apostrophe quotedbl Cyrillic_softsign Cyrillic_SOFTSIGN" \
 -e "keysym z =z Z Cyrillic_ze Cyrillic_ZE" \
 -e "keysym x =x X Cyrillic_hardsign Cyrillic_HARDSIGN" \
 -e "keysym c =c C Cyrillic_che Cyrillic_CHE" \
 -e "keysym v =v V Cyrillic_ve Cyrillic_VE" \
 -e "keysym b =b B Cyrillic_be Cyrillic_BE" \
 -e "keysym n =n N Cyrillic_en Cyrillic_EN" \
 -e "keysym m =m M Cyrillic_em Cyrillic_EM" \
 -e "keysym comma =comma less comma guillemotleft" \
 -e "keysym period =period greater period guillemotright" \
 -e "keysym slash = slash question Cyrillic_e question" \
 -e "keysym Control_L =Control_L ISO_Next_Group"
